{
  "name": "igniphp/network",
  "description": "PHP swoole based http server",
  "keywords": [
    "swoole",
    "http",
    "server",
    "psr-7",
    "psr-15"
  ],
  "support": {
    "issues": "https://github.com/igniphp/network/issues"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Dawid <krac> Kraczkowski",
      "email": "dawid.kraczkowski@gmail.com"
    }
  ],
  "scripts": {
    "phpstan": "vendor/bin/phpstan analyse src --level=0",
    "coverage": "vendor/bin/phpunit --coverage-html ./coverage"
  },
  "require": {
    "php": ">=7.4.0",
    "ext-swoole": "^4.5",
    "igniphp/exception": ">=1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^1.0",
    "psr/http-server-middleware": "^1.0",
    "psr/log": "^1.0",
    "laminas/laminas-diactoros": "^2.5.0",
    "laminas/laminas-httphandlerrunner": "^1.3.0"
  },
  "require-dev": {
    "phpstan/phpstan": ">=0.9.2",
    "phpunit/phpunit": "~9.5",
    "mockery/mockery": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "Igni\\Network\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Igni\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  }
}
